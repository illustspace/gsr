{
  "extends": "../../tsconfig.json",
  "include": ["./src"],
  "compilerOptions": {
    "types": ["node", "jest"],
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "target": "es2018",
    "module": "commonjs",
    "isolatedModules": false,
    "declaration": true,
    "outDir": "dist",
    "noEmit": false,
    "baseUrl": "src",
    "paths": {
      "~/*": ["./*"]
    }
  }
}
