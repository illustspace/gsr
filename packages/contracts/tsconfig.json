{
  "extends": "../../tsconfig.json",
  "include": ["./scripts", "./tasks", "./deploy", "./test"],
  "files": ["./hardhat.config.ts"],
  "compilerOptions": {
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "target": "es2018",
    "module": "commonjs",
    "isolatedModules": false,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    }
  }
}
