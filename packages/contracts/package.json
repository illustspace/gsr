{
  "name": "@geospatialregistry/contracts",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "hardhat node",
    "build": "hardhat compile && cp -r ./artifacts/ ../e2e/src/artifacts",
    "contracts": "TS_NODE_TRANSPILE_ONLY=1 hardhat typechain",
    "deploy": "hardhat run scripts/deploy.ts",
    "deploy:localhost": "yarn deploy --network localhost",
    "deploy:testnet": "yarn deploy --network ropsten",
    "deploy:ropsten": "yarn deploy --network ropsten",
    "deploy:rinkeby": "yarn deploy --network rinkeby",
    "lint": "npm-run-all -p 'lint:*'",
    "lint:solhint": "solhint 'contracts/**/*.sol'",
    "lint:tsc": "tsc --build",
    "format": "npm-run-all -s 'format:*'",
    "format:solhint": "solhint --fix 'contracts/**/*.sol'",
    "format:tsc": "tsc --build",
    "faucet": "hardhat faucet --network localhost",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "prepare": "husky install",
    "docs": "hardhat docgen && prettier --write ./docs/index.md"
  },
  "devDependencies": {
    "@ethersproject/abi": "5.4.1",
    "@ethersproject/bignumber": "5.4.1",
    "@ethersproject/providers": "5.4.5",
    "@geospatialregistry/sdk": "^0.0.0",
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.0.1",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "4.5.0",
    "@taquito/remote-signer": "^13.0.1",
    "@taquito/signer": "^13.0.1",
    "@taquito/utils": "^13.0.1",
    "@typechain/ethers-v5": "^9.0.0",
    "@typechain/hardhat": "^4.0.0",
    "@types/chai": "^4.2.18",
    "@types/lodash": "^4.14.171",
    "@types/mocha": "^8.2.2",
    "@types/ngeohash": "^0.6.4",
    "@types/node": "18.7.14",
    "chai": "^4.3.4",
    "dotenv": "^9.0.2",
    "ethereum-waffle": "^3.4.0",
    "ethers": "5.4.6",
    "hardhat": "^2.9.0",
    "hardhat-deploy": "^0.11.4",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": ">=6",
    "lint-staged": ">=10",
    "lodash": "^4.17.21",
    "multiformats": "^9.6.3",
    "ngeohash": "^0.6.3",
    "npm-run-all": "^4.1.5",
    "sinon": "^14.0.0",
    "solc": "0.8.4",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.21",
    "solidity-docgen": "^0.6.0-beta.28",
    "ts-node": "^10.8.2",
    "tsconfig-paths": "^3.9.0",
    "typechain": "^7.0.0",
    "typescript": "^4.7.4"
  }
}
