{
  "references": [
    { "path": "packages/contracts" },
    { "path": "packages/e2e" },
    { "path": "packages/indexer" },
    { "path": "packages/sdk" }
  ],
  "compilerOptions": {
    //
    "disableReferencedProjectLoad": true,
    // Cached builds
    "incremental": true,
    // Emit types
    "declaration": true,
    // Emit type source maps for "Go to source definition"
    "declarationMap": true,
    // Composite projects allow for references
    "composite": true,
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowJs": true,
    "noEmit": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
